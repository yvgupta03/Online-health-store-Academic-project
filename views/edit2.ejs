<%- include ('partials/header-login') %>
<div class="container">
<h3> Modify Product Details </h3>


<form action="/products/<%= product_id %>?_method=PUT" method="POST">
	<div class="form-group mb-2">
        <label for="pname">Product Name:</label>
        <input type="text" name="pname" class="form-control" value="<%= editableProd.pname %>" placeholder="Name new product" id="pname" required>
        </div>

		<div class="form-group mb-2">
        <label for="ptype">Product Type:</label>
        <input type="text" name="ptype" class="form-control" value="<%= editableProd.ptype %>" placeholder="Mention product type" id="ptype" required>
        </div>

		<div class="form-group mb-2">
        <label for="ptag">Tags:</label>
        <input type="text" name="ptag" class="form-control" value="<%= editableProd.ptag %>" placeholder="Filter tags like eg. Drops, Tablets, Cold..." id="ptag" required>
        </div>

		<div class="form-group mb-2">
        <label for="pbrand">Brand Name:</label>
        <input type="text" name="pbrand" class="form-control" value="<%= editableProd.pbrand %>" placeholder="Enter product brand" id="pbrand" required>
        </div>

		<div class="form-group mb-2">
        <label for="pcomposition">Composition:</label>
        <input type="text" name="pcomposition" class="form-control" value="<%= editableProd.pcomposition %>" placeholder="Enter composition" id="pcomposition" required>
        </div>

        <div class="form-group mb-2">
        <label for="pquantity">Quantity:</label>
        <input type="number" name="pquantity" class="form-control" value="<%= editableProd.pquantity %>" placeholder="Enter available quantity" id="pquantity" maxlength="5" required>
        </div>

		<div class="form-group mb-2">
        <label for="psymptoms">Symptoms covered:</label>
        <input type="text" name="psymptoms" class="form-control" value="<%= editableProd.psymptoms %>" placeholder="Enter symptoms covered" id="psymptoms" required>
        </div>

        <div class="form-group mb-2">
        <label for="pdesc">Product Description:</label>
        <input type="text" name="pdesc" class="form-control" value="<%= editableProd.pdesc %>" placeholder="About product" id="pdesc" maxlength="80" required>
        </div>

        <div class="form-group mb-2">
        <label for="price">Price per unit: (in USD)</label>
        <input type="number" name="price" class="form-control" value="<%= editableProd.price %>" placeholder="Price per unit" id="price" maxlength="5" required>
        </div>


        <button type="submit" class="btn btn-warning fw-bold">Save Product Inventory</button>
        <a href="/products/<%= product_id %>"><button type="button" class="btn btn-warning mx-4 fw-bold">Cancel Modification</button></a>

</form>

</div>

<%- include ('partials/footer') %>