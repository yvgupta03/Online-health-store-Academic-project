<%- include ('partials/header-login') %>
<div class="container">    
    <div class="row">   
      <p class="fs-4 fw-bold">Shopping Cart </p>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Price (in USD)</th>
            <th>Add</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(function(pcart){ %>
          <tr id="<%= pcart.cartid %>">
            <td><%= pcart.pname %> </td>
            <td><%= pcart.ptype %> </td>
            <td><%= pcart.pquantity %> </td>
            <td><%= pcart.price %> </td>
            <td><button value="<%= pcart.cartid %>" onclick="pageRedirect()" class="btn btn-warning addprod">Add</button></td>
            <td><button value="<%= pcart.cartid %>" onclick="pageRedirect()" class="btn btn-warning removeprod">Remove</button></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <p class="fs-6 fw-bold">Grand Total: <%= grandtotal%></p>
    </div>
    <p class="fs-4 fw-bold">Delivery </p>
    <form action="/ordered" method="post" class="row g-3">
    <div class="form-group mb-2">
    <label for="username">Email:</label>
    <input type="text" name="username" class="form-control" placeholder="Enter e-mail" id="email" value="<%= cust.user %>" required>
    </div>
    <div class="form-group mb-2">
    <label for="phone">Phone No:</label>
    <input type="tel" name="phone" class="form-control" value="<%= cust.phone %>" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Enter phone no." id="phone" maxlength="12" minlength="12" required>
    </div>

    <div class="form-group mb-2">
    <label for="address">Address:</label>
    <input type="text" name="address" class="form-control" value="<%= cust.address %>" placeholder="Enter address" id="address" maxlength="80" required>
    </div>
    <div class="form-group mb-2">
    <button type="submit" class="btn btn-warning fw-bold">Place Order</button>
    </div>
    </form>
</div>
<%- include ('partials/footer') %>